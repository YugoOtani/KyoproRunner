{
  "name": "rust-worksheet",
  "displayName": "rust-worksheet",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "rust-worksheet.executeCommand",
          "name": "Kyopro Runner"
        }
      ]
    },
    "commands": [
      {
        "command": "rust-worksheet.executeCommand",
        "title": "Execute Command"
      },
      {
        "command": "rust-worksheet.openCustomTerminal",
        "title": "CustomTerminal"
      }


    ],
    "configuration":{
      "title": "Kyopro Runner",
      "properties": {
          "runtime.command": {
            "type": "string",
            "default": "cargo run",
            "description": "Specifies the command when button is pressed"
          }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write 'src/**/*.ts' 'media/**/*.js'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "prettier": "^3.3.0",
    "typescript": "^5.3.3"
  }
}